{
  "name": "contributte/mailing",
  "description": "Sending emails with pleasure and prepared templates.",
  "keywords": [
    "nette",
    "mail",
    "mailing"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/contributte/mailing",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 7.1",
    "nette/application": "^3.0",
    "nette/di": "^3.0",
    "nette/mail": "^3.0",
    "nette/utils": "^3.0",
    "latte/latte": "^2.5.1"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "ninjify/nunjuck": "^0.2.0",
    "mockery/mockery": "^0.9.9",
    "phpstan/phpstan-shim": "^0.11",
    "phpstan/phpstan-deprecation-rules": "^0.11",
    "phpstan/phpstan-nette": "^0.11",
    "phpstan/phpstan-strict-rules": "^0.11"
  },
  "conflict": {
    "nette/latte": "<2.5.0"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Mailing\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Contributte\\Mailing\\": "tests/"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tests": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p phpdbg --colors 1 -C --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "0.3.x-dev"
    }
  }
}
